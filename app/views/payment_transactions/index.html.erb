<div class="page-header">
  <h1>Listing payment_transactions</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Uuid</th>
            <th>Merchant</th>
            <th>Status</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Customer email</th>
            <th>Customer phone</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @payment_transactions) do |payment_transaction| %>
            <td><%= payment_transaction.uuid %></td>
            <td><%= payment_transaction.merchant_id %></td>
            <td><%= payment_transaction.status %></td>
            <td><%= payment_transaction.type %></td>
            <td><%= payment_transaction.amount %></td>
            <td><%= payment_transaction.customer_email %></td>
            <td><%= payment_transaction.customer_phone %></td>
            <td><%= link_to 'Show', payment_transaction_path(payment_transaction) %></td>
      <% end %>
    </tbody>
  </table>
</div>
